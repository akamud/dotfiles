source ~/.vimrc

" IdeaVim plugins
set surround
" Vim commentary
" set commentary
" Proper paste without losing the text in the register
set ReplaceWithRegister
" Relative Line Numbers
set rnu
" Absolute Line Number on selected line
set nu
set highlightedyank
set easymotion
set argtextobj

" paste maps
nmap <Leader>p gr
nmap <Leader>pp grr
xmap <Leader>p gr

" GoTo Impementation
nmap gD :action GotoImplementation<CR>

" Commentary that actually works on Rider
nmap gcc :action CommentByLineComment<CR>
vmap gc :action CommentByBlockComment<CR>