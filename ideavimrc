source ~/.vimrc

" IdeaVim plugins
set surround
" Vim commentary
set commentary
" Proper paste without losing the text in the register
set ReplaceWithRegister
" Relative Line Numbers
set rnu
" Absolute Line Number on selected line
set nu
set highlightedyank
set easymotion
set argtextobj
set vim-paragraph-motion

" paste maps
nmap <Leader>p gr
nmap <Leader>pp grr
xmap <Leader>p gr

" GoTo Impementation
nmap gD :action GotoImplementation<CR>

" Smart join for IdeaVim
set ideajoin